
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,400,700" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/HataSayfası/css/style.css" />

</head>

<body>

    <div id="notfound">
        <div class="notfound">
            <div class="notfound-404">
                <h1>@(ViewBag.Title != null ? ViewBag.Title : "404")</h1>
            </div>
            <div class="notfound-404 ">
                <h2>@(ViewBag.Content != null ? ViewBag.Content : "Sayfa Bulunamadı...")</h2>
            </div>
            <a asp-action="Index" asp-controller="Home">Ana Sayfa</a>
        </div>
    </div>

</body>

</html>
