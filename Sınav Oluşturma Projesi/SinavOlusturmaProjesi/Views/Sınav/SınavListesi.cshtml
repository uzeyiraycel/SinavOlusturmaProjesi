@using KonusarakOgren.Models
@model List<Sınav>

@{
    ViewData["Title"] = "Sınav Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sınav Listesi</h1>

<div class="examList">

    @if (Model != null)
    {
        if (Model.Count > 0)
        {
            <table class="table table-sm table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Sınav Id</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Tarih</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var s in Model)
                    {
                        <tr style="cursor:pointer;">
                            <th scope="row">@s.SınavID</th>
                            <td onclick="window.location.href='@Url.Action("SınavSayfası","Sınav",new { id=s.SınavID })'">@s.Baslık</td>
                            <td>@s.OlusturmaTarihi</td>
                            <td>
                                <a asp-action="SınavSil" asp-controller="Sınav" asp-route-id="@s.SınavID" class="btn btn-danger">Sil</a>
                            </td>
                            
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <div class="jumbotron">
                <h1 class="display-4">Kayıtlı sınav bulunamadı</h1>
                <p class="lead">Yeni bir sınav oluşturmak için "Sınav Oluştur" butonuna basınız.</p>
                <a class="btn btn-primary btn-lg" asp-action="SınavEkle" asp-controller="Sınav" role="button">Sınav Oluştur</a>
            </div>
        }
    }
    else
    {
        <div class="jumbotron">
            <h1 class="display-4">Kayıtlı sınav bulunamadı</h1>
            <p class="lead">Yeni bir sınav oluşturmak için "Sınav Oluştur" butonuna basınız.</p>
            <a class="btn btn-primary btn-lg" asp-action="SınavEkle" asp-controller="Sınav" role="button">Sınav Oluştur</a>
        </div>
    }
</div>